<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/tips_item_margin_top_bottom"
        android:layout_marginBottom="@dimen/tips_item_margin_top_bottom"
        android:layout_marginStart="@dimen/tips_item_margin_start_end"
        android:layout_marginEnd="@dimen/tips_item_margin_start_end"
        android:padding="@dimen/tips_item_padding"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="@dimen/tips_item_icon_size"
                    android:layout_height="@dimen/tips_item_icon_size"
                    android:layout_marginBottom="@dimen/tips_item_image_margin_bottom"
                    android:layout_marginEnd="@dimen/tips_item_image_margin_end"
                    android:src="@drawable/drop"/>

                <TextView
                    android:id="@+id/tip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>